{
    "info": {
      "name": "Store POS API",
      "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
    },
    "item": [
      {
        "name": "Authentication",
        "item": [
          {
            "name": "Register User",
            "request": {
              "method": "POST",
              "url": "{{base_url}}/api/register",
              "body": {
                "mode": "raw",
                "raw": {
                  "username": "testuser",
                  "email": "test@example.com",
                  "password": "Test@123",
                  "phone_number": "+923001234567",
                  "address": "123 Test Street, Karachi",
                  "role": "user"
                },
                "options": {
                  "raw": {
                    "language": "json"
                  }
                }
              }
            }
          },
          {
            "name": "Login",
            "request": {
              "method": "POST",
              "url": "{{base_url}}/api/login",
              "body": {
                "mode": "raw",
                "raw": {
                  "email": "test@example.com",
                  "password": "Test@123"
                },
                "options": {
                  "raw": {
                    "language": "json"
                  }
                }
              }
            }
          }
        ]
      },
      {
        "name": "Products",
        "item": [
          {
            "name": "Get All Products",
            "request": {
              "method": "GET",
              "url": "{{base_url}}/api/products"
            }
          },
          {
            "name": "Add Product (Admin)",
            "request": {
              "method": "POST",
              "url": "{{base_url}}/api/admin/products",
              "headers": {
                "Authorization": "Bearer {{token}}"
              },
              "body": {
                "mode": "raw",
                "raw": {
                  "name": "Panadol",
                  "description": "Pain relief tablets",
                  "category_id": 1,
                  "price": 150.00,
                  "stock_quantity": 100,
                  "unit": "Pack",
                  "barcode": "5901234123457",
                  "image_url": "https://example.com/images/panadol.jpg"
                },
                "options": {
                  "raw": {
                    "language": "json"
                  }
                }
              }
            }
          }
        ]
      },
      {
        "name": "Orders",
        "item": [
          {
            "name": "Place Order",
            "request": {
              "method": "POST",
              "url": "{{base_url}}/api/orders",
              "headers": {
                "Authorization": "Bearer {{token}}"
              },
              "body": {
                "mode": "raw",
                "raw": {
                  "items": [
                    {
                      "product_id": 1,
                      "quantity": 2
                    },
                    {
                      "product_id": 3,
                      "quantity": 1
                    }
                  ],
                  "delivery_address": "123 Test Street, Karachi",
                  "is_online_order": true
                },
                "options": {
                  "raw": {
                    "language": "json"
                  }
                }
              }
            }
          },
          {
            "name": "Get User Orders",
            "request": {
              "method": "GET",
              "url": "{{base_url}}/api/orders",
              "headers": {
                "Authorization": "Bearer {{token}}"
              }
            }
          },
          {
            "name": "Get Order Details",
            "request": {
              "method": "GET",
              "url": "{{base_url}}/api/orders/1",
              "headers": {
                "Authorization": "Bearer {{token}}"
              }
            }
          }
        ]
      },
      {
        "name": "Admin",
        "item": [
          {
            "name": "Get All Orders (Admin)",
            "request": {
              "method": "GET",
              "url": "{{base_url}}/api/admin/orders",
              "headers": {
                "Authorization": "Bearer {{token}}"
              }
            }
          },
          {
            "name": "Get Sales Report",
            "request": {
              "method": "GET",
              "url": "{{base_url}}/api/admin/reports/sales",
              "headers": {
                "Authorization": "Bearer {{token}}"
              },
              "query": [
                {
                  "key": "start_date",
                  "value": "2024-01-01"
                },
                {
                  "key": "end_date",
                  "value": "2024-03-31"
                }
              ]
            }
          }
        ]
      }
    ],
    "variable": [
      {
        "key": "base_url",
        "value": "http://localhost:3100"
      },
      {
        "key": "token",
        "value": "your_jwt_token_here"
      }
    ]
  }